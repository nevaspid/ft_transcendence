{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2017",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true               // ✅ Ajouté pour autoriser les imports .json
  },
  "include": ["src/**/*.ts", "src/types"]
}